<% provide(:title, "Login") %>
<h1 class="text-center">Log in</h1>

<%= form_for(:session, url: login_path) do |f| %>
  <%= f.label :id_name_or_email, "ID or Email" %>
  <%= f.text_field :id_name_or_email, placeholder: "Enter ID or Email", class: "form-control body-input" %>

  <%= f.label :password, "Password" %>
  <%= f.password_field :password, placeholder: "Enter Password", class: "form-control body-input" %>

  <%= f.label :remember_me, class: "checkbox inline" %>
  <%= f.check_box :remember_me %>
  <br>

  <%= f.submit "Log in", class: "btn btn-outline-primary" %>
  <p>
  <%= link_to "Create new account", new_user_path %>
  </p>
<% end %>
