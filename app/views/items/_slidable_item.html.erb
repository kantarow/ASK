<h1><%= title %></h1>
<hr>
<div id="slide-screen" class="slide-screen"></div>
<ul class="slide-bar" id="slide-bar">
  <% md2html(content).gsub("<hr />", "<hr>").split("<hr>").each do |page| %>
    <li class="slide-page" id="slide-page" tabindex="-1">
      <div>
        <%= page.html_safe %>
      </div>
    </li>
  <% end %>
</ul>

<script>
  $("#slide-bar li").click(function(event){
    $("#slide-bar li").css("border", "none");
    $(this).css("border", "10px solid limegreen");
    $("#slide-screen").html($(this).html());
  });

  $("#slide-bar li").keydown(function(event){
    console.log(event.keyCode);
    if(event.keyCode == 39){
      $(this).next().click();
      $(this).next().focus();
    }else if(event.keyCode == 37){
      $(this).prev().click();
      $(this).prev().focus();
    }else if(event.keyCode == 37){
    }
  });

  $("#slide-bar li").first().click();
  $("#slide-bar li").first().focus();
</script>
